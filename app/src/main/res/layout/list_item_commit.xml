<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <TextView
            android:id="@+id/list_item_commit_text_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="@string/commit_item_name_placeholder"/>
        <TextView
            android:id="@+id/list_item_commit_text_author_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_item_commit_text_author_name"
            android:layout_marginStart="4dp"
            android:layout_alignParentTop="true"
            android:text="@string/commit_item_email_placeholder" />
        <TextView
            android:id="@+id/list_item_commit_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/commit_item_message_placeholder"
            android:layout_below="@id/list_item_commit_text_author_name"/>
        <TextView
            android:id="@+id/list_item_commit_hash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/commit_item_hash_placeholder"
            android:layout_below="@id/list_item_commit_text_message"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>